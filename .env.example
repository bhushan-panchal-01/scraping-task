# ==============================================
# RapidAPI Configuration
# ==============================================
# Required only if INSTAGRAM_SCRAPING_METHOD=rapidapi
RAPIDAPI_KEY=your_rapidapi_key_here
TIKTOK_API_HOST=tiktok-scraper7.p.rapidapi.com
INSTAGRAM_API_HOST=instagram-scraper-api2.p.rapidapi.com

# ==============================================
# Meta API Configuration (Instagram Only)
# ==============================================
# Required when INSTAGRAM_SCRAPING_METHOD=meta
# Get credentials from Meta Developer Dashboard:
# 1. Create a Meta App at https://developers.facebook.com
# 2. Add Instagram Basic Display or Instagram Graph API product
# 3. Generate a long-lived access token
# 4. Get your Instagram Business Account ID

INSTAGRAM_META_ACCESS_TOKEN=your_long_lived_access_token_here
INSTAGRAM_META_USER_ID=your_instagram_business_account_id
INSTAGRAM_META_API_VERSION=v21.0

# ======================
# Scraping Configuration
# ======================
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3

# Scraping Method: rapidapi | web | meta
# Default method for all platforms (can be overridden per platform)
SCRAPING_METHOD=rapidapi

# Platform-specific method overrides
# Instagram options: rapidapi | web | meta
INSTAGRAM_SCRAPING_METHOD=rapidapi

# TikTok options: web (rapidapi no longer supported)
TIKTOK_SCRAPING_METHOD=web

# ======================
# Web Scraping Configuration
# ======================
# Proxy Settings (required for TikTok in India or restricted regions)
PROXY_ENABLED=true
PROXY_HOST=proxy.example.com
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=

# Browser Settings
HEADLESS_MODE=true
BROWSER_TIMEOUT=60000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Anti-Detection Settings
MIN_DELAY_MS=1000
MAX_DELAY_MS=3000

# ======================
# File Configuration
# ======================
# Option 1: Single file (auto-detected by extension .xlsx or .csv)
DATA_FILE_PATH=./influencer_data.xlsx

# Option 2: For CSV, specify separate files for influencers and posts
# INFLUENCER_CSV_PATH=./influencers.csv
# POSTS_CSV_PATH=./posts.csv

# Legacy support (still works, will be used if DATA_FILE_PATH is not set)
EXCEL_FILE_PATH=./influencer names.xlsx

# ======================
# Cron Schedule
# ======================
# Cron schedule format: minute hour day month weekday
# Default: every 6 hours
CRON_SCHEDULE=0 */6 * * *
# Examples:
# Daily at midnight: 0 0 * * *
# Every 12 hours: 0 */12 * * *
# Every 5 minutes (testing): */5 * * * *

# Run job immediately on startup (optional)
RUN_ON_STARTUP=false

# ======================
# Directories
# ======================
BACKUP_DIR=./backups
LOG_DIR=./logs

# ======================
# Logging
# ======================
LOG_LEVEL=info
# Options: error, warn, info, debug
